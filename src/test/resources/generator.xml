<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC 
"-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" 
"http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>		
	  <context id="MySqlTables" targetRuntime="MyBatis3">
        <!-- 序列化插件 -->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"></plugin>
         
       	<!-- 重命名插件-->
	    <plugin type="org.mybatis.generator.plugins.RenameExampleClassPlugin">      
            <property name="searchString" value="Example$" />      
            <property name="replaceString" value="Criteria" />  
        </plugin>
        
        <!-- Redis Cache --> 
        <!-- <plugin type="org.mybatis.generator.plugins.CachePlugin"> 
        	 <property name="cache_type" value="com.xsili.cache.mybatis.redis.RedisCache" /> 
        </plugin> -->
        
        <!-- 自动生成service插件 -->
		<plugin type="org.mybatis.generator.plugins.MybatisServicePlugin" >
			<property name="targetProject" value="src/main/java" />
			<property name="targetPackage" value="com.xsili.module.service" />
			<property name="implementationPackage" value="com.xsili.module.service.impl" />
		</plugin>
		
		<!-- 生成分页插件 -->
		<plugin type="org.mybatis.generator.plugins.PaginationPlugin" ></plugin>
		
		<!-- 自动生成 mapper测试 插件  targetPackage与对应的实体生成保持一致 -->
		<plugin type="org.mybatis.generator.plugins.MybatisMapperJunitPlugin" >
			<property name="targetProject" value="src/test/java" />
			<property name="targetPackage" value="com.xsili.test.module.mapper" />
			<!-- 测试基类 -->
			<property name="superTestCase" value="com.xsili.test.BaseTest" />
		</plugin>
		
		<commentGenerator>
			<!-- 是否自动生成注释 -->
			<property name="suppressAllComments" value="true" />
			<!-- <property name="suppressDate" value="true"/>
			<property name="addRemarkComments" value="true"/>
			<property name="dateFormat" value="yyyy-MM-dd HH:mm"/> -->
		</commentGenerator>
		
		<!-- 指定连接字符串 -->
		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://127.0.0.1:3306/shixun?useUnicode=true&amp;characterEncoding=utf-8&amp;zeroDateTimeBehavior=convertToNull" 
			userId="root"
			password="root">
		</jdbcConnection>
		
		<javaTypeResolver>
			<!-- 是否强制把数字转换为java.math.DECIMAL -->
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>
		
		<!-- 实体类对象 -->
		<javaModelGenerator targetPackage="com.xsili.module.entity" targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>
		
		<!-- mybatis mapper.xml -->
		<sqlMapGenerator targetPackage="mybatis/mapper" targetProject="src/main/resources">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>
		
		<!-- mybatis mapper.java -->
		<javaClientGenerator type="XMLMAPPER" targetPackage="com.xsili.module.mapper" targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>
		
		
        <!-- 数据库表-->
		
		<!-- <table tableName="t_course_segment_live_stat"  domainObjectName="CourseSegmentLiveStat" /> -->
		<!-- <table tableName="_t_blob"  domainObjectName="TBlob" /> -->
		<table tableName="_t_auto_increment"  domainObjectName="AutoIncrement" />
		
	</context>
</generatorConfiguration>