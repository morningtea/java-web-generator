<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC 
"-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" 
"http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
	  <!-- defaultModelType: hierarchical flat conditional -->
	  <context id="MySqlTables" targetRuntime="MyBatis3" defaultModelType="flat">
		
		<property name="javaFileEncoding" value="UTF-8"/>
		<property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <!-- <property name="javaFormatter" value=""/> -->
        <!-- <property name="xmlFormatter" value=""/> -->
        
        <!-- 序列化插件 -->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"></plugin>
         
       	<!-- 重命名插件-->
	    <plugin type="org.mybatis.generator.plugins.RenameExampleClassPlugin">      
            <property name="searchString" value="Example$" />      
            <property name="replaceString" value="Criteria" />  
        </plugin>
        
        <!-- Redis Cache -->
        <!-- <plugin type="org.mybatis.generator.plugins.CachePlugin"> 
        	 <property name="cache_type" value="com.xsili.cache.mybatis.redis.RedisCache" /> 
        </plugin> -->
		
		<!-- 生成分页插件 -->
		<plugin type="org.mybatis.generator.xsili.plugins.PaginationPlugin">
			<property name="queryParam" value="org.mybatis.generator.xsili.outputdependence.page.QueryParam" />
		</plugin>
		
		<!-- Mapper注解 -->
		<plugin type="org.mybatis.generator.plugins.MapperAnnotationPlugin">
			<property name="annotationClass" value="org.springframework.stereotype.Repository" />
			<property name="annotationName" value="@Repository" />
		</plugin>
        
        <!-- service代码生成 -->
		<plugin type="org.mybatis.generator.xsili.plugins.ServicePlugin">
			<property name="targetProject" value="src/main/java" />
			<property name="targetPackage" value="com.xsili.module.service" />
			<property name="targetPackageImpl" value="com.xsili.module.service.impl" />
			<!-- 分页工具类 -->
			<property name="pagerUtil" value="org.mybatis.generator.xsili.outputdependence.page.PagerUtil" />
			<!-- 分页类型 -->
			<property name="pager" value="org.mybatis.generator.xsili.outputdependence.page.Pager" />
			<!-- 选填, 业务异常 -->
			<property name="businessException" value="org.mybatis.generator.xsili.outputdependence.exception.BusinessException" />
			<!-- 选填, id生成器 -->
			<property name="idGenerator" value="org.mybatis.generator.xsili.outputdependence.IDGenerator" />
		</plugin>
		
        <!-- controller代码生成 -->
		<plugin type="org.mybatis.generator.xsili.plugins.SpringMvcControllerPlugin">
			<property name="targetProject" value="src/main/java" />
			<property name="targetPackage" value="com.xsili.module.controller" />
			<property name="targetPackageService" value="com.xsili.module.service" />
			<!-- 接口风格, restful or 传统CRUD -->
			<property name="enableRestful" value="true" />
			<!-- 开启Swagger文档注释 -->
			<property name="enableSwaggerAnnotation" value="true" />
			<!-- 基类 -->
			<property name="abstractController" value="org.mybatis.generator.xsili.outputdependence.AbstractController" />
			<!-- 分页类型 -->
			<property name="pager" value="org.mybatis.generator.xsili.outputdependence.page.Pager" />
			<!-- 方法返回值类型 -->
			<property name="resultModel" value="org.mybatis.generator.xsili.outputdependence.model.Result" />
			<!-- 选填, 参数校验工具类 -->
			<property name="validatorUtil" value="org.mybatis.generator.xsili.outputdependence.validation.ValidatorUtil" />
		</plugin>
		
		<!-- mapper测试代码生成  targetPackage与对应的实体生成保持一致 -->
		<plugin type="org.mybatis.generator.xsili.plugins.MapperJunitPlugin">
			<property name="targetProject" value="src/test/java" />
			<property name="targetPackage" value="com.xsili.test.module.mapper" />
			<!-- 测试基类 -->
			<property name="superTestCase" value="org.mybatis.generator.xsili.outputdependence.test.BaseTest" />
		</plugin>
		
		<commentGenerator type="org.mybatis.generator.xsili.XsiliCommentGenerator">
			<!-- 是否自动生成注释 -->
			<property name="suppressAllComments" value="false" />
			<property name="suppressDate" value="false"/>
			<property name="dateFormat" value="yyyy-MM-dd HH:mm"/>
			<property name="addRemarkComments" value="true"/>
		</commentGenerator>
		
		<!-- 指定连接字符串 -->
		<!-- <jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://127.0.0.1:3306/test?useUnicode=true&amp;characterEncoding=utf-8&amp;zeroDateTimeBehavior=convertToNull" 
			userId="root"
			password="root">
		</jdbcConnection> -->
		<jdbcConnection driverClass="org.hsqldb.jdbcDriver"
			connectionURL="jdbc:hsqldb:mem:dbname" 
			userId="sa"
			password="">
		</jdbcConnection>
		
		<javaTypeResolver>
			<!-- 是否强制把数字转换为java.math.DECIMAL -->
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>
		
		<!-- 实体类对象 -->
		<javaModelGenerator targetPackage="com.xsili.module.entity" targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>
		
		<!-- mybatis mapper.xml -->
		<sqlMapGenerator targetPackage="mybatis/mapper" targetProject="src/main/resources">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>
		
		<!-- mybatis mapper.java -->
		<javaClientGenerator type="XMLMAPPER" targetPackage="com.xsili.module.mapper" targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>
		
        <!-- 数据库表-->
		<!-- <table tableName="%" /> -->
		
		<table tableName="t_blob_auto_increment"  domainObjectName="BlobAutoIncrement" />
		<table tableName="t_blob_union_key"  domainObjectName="BlobUnionKey" />
		
	</context>
</generatorConfiguration>